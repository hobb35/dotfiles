    // "editor.fontFamily": "Fira Code",
    // "editor.fontFamily": "Input Mono",
    // "editor.fontFamily": "IBM Plex Mono",
    // "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",    // "editor.fontFamily": "Fira Code",
    // "editor.fontFamily": "Operator Mono SSM",
    "editor.fontFamily": "Input",
    // "editor.fontFamily": "PragmataPro",
    // "editor.fontFamily": "FuraCode Nerd Font",
    "breadcrumbs.enabled": true,
    "extensions.autoUpdate": false,
    // "editor.fontFamily": "FiraCode-Retina",
    // "editor.fontFamily": "Fira Code",
    "editor.fontSize": 13.5,
    "editor.fontLigatures": false,
    "editor.lineHeight": 20,
    "editor.tabSize": 4,
    "editor.wrappingIndent": "same",
    "editor.renderIndentGuides": true,
    "editor.codeLens": false,
    "editor.cursorStyle": "underline",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.detectIndentation": true,
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Ayu Adapta",
    "workbench.statusBar.feedback.visible": true,
    "workbench.iconTheme": "ayu",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    // Prettier settings
    "prettier.tabWidth": 2,
    "prettier.eslintIntegration": true,
    "prettier.jsxBracketSameLine": true,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    ////////////////////////////////
    // Language-specific settings //
    ////////////////////////////////
    //
    // JS/TS
    //
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "javascript.implicitProjectConfig.checkJs": true,
    "javascript.validate.enable": true,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "typescript",
            "autoFix": true
        },
        {
            "language": "typescriptreact",
            "autoFix": true
        }
    ],
    "typescript.tsdk": "/usr/local/lib/node_modules/typescript/lib",
    //
    // Python
    //
    "python.pythonPath": "python3",
    //
    // Markdown
    //
    "markdownlint.config": {
        "default": true,
        "MD007": {
            "indent": 2
        },
        "no-hard-tabs": false
    },
    //
    // Lua
    //
    "lua.luacheckPath": "/usr/bin",
    "lua.preferLuaCheckErrors": true,
    "[lua]": {
        "editor.defaultFormatter": "trixnz.vscode-lua"
    },
    "cSpell.userWords": [
        "Belafonte",
        "DEVTOOLS",
        "Plex",
        "Spotify",
        "Tierra",
        "browserslist",
        "crossorigin",
        "cyclomatic",
        "fastforward",
        "flexbox",
        "genericize",
        "hammerspoon",
        "io",
        "ios",
        "janky",
        "slugify",
        "ssid",
        "submodules",
        "tachyons",
        "tmux",
        "wifi"
    ],
    "window.zoomLevel": 0,
}

